<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clr1"
    tools:context=".LoginActivity">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_x="27dp"
        android:layout_y="47dp"
        android:hint="Enter Your Name"
        android:inputType="text"
        android:paddingTop="10dp"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="Hardcodedtext" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et2"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_x="27dp"
        android:layout_y="108dp"
        android:hint="Enter Your Age"
        android:inputType="text"
        android:paddingTop="10dp"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="Hardcodedtext" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et4"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_x="27dp"
        android:layout_y="166dp"
        android:hint="Enter Your Username"
        android:inputType="text"
        android:paddingTop="10dp"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="Hardcodedtext" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et3"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_x="27dp"
        android:layout_y="228dp"
        android:hint="Enter Your Password"
        android:inputType="text"
        android:paddingTop="10dp"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="Hardcodedtext" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et5"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_x="27dp"
        android:layout_y="286dp"
        android:hint="Re-enter Your Password"
        android:inputType="text"
        android:paddingTop="10dp"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="Hardcodedtext" />

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_x="27dp"
        android:layout_y="346dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender :"
            tools:ignore="Hardcodedtext"
            android:textColor="#FF000000"
            android:textSize="20sp"/>

        <RadioButton
            android:id="@+id/rbn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            tools:ignore="Hardcodedtext"
            android:textColor="#FF000000"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rbn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textColor="#FF000000"
            android:layout_marginLeft="10dp"
            tools:ignore="Hardcodedtext"
            android:textSize="20sp" />


    </RadioGroup>

    <Button
        android:id="@+id/btn2"
        android:layout_width="298dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:layout_x="65dp"
        android:layout_y="434dp"
        android:text="Register"
        android:textSize="20dp"
        app:backgroundTint="@color/teal_200"
        tools:ignore="Hardcodedtext" />


</AbsoluteLayout>